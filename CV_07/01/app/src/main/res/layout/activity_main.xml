<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView

        android:id="@+id/top_label"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:text="Top skÃ³re:"

        android:textSize="30sp" />

    <TextView

        android:id="@+id/top_text"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:layout_alignTop="@id/top_label"

        android:layout_toRightOf="@id/top_label"

        android:textSize="30sp" />

    <TextView

        android:id="@+id/skore_text"

        android:layout_width="match_parent"

        android:layout_height="wrap_content"

        android:layout_centerInParent="true"

        android:gravity="center"

        android:textSize="60sp" />

    <Button

        android:id="@+id/nuluj_button"

        android:layout_width="match_parent"

        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"

        android:layout_gravity="bottom"

        android:text="Nuluj" >

    </Button>

    <Button

        android:id="@+id/hra_button"

        android:layout_width="match_parent"

        android:layout_height="wrap_content"

        android:layout_above="@id/nuluj_button"

        android:text="Hra" >

    </Button>

</RelativeLayout>