<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GoogleActivity"
    android:background="#ffffff">

    <ImageView
        android:layout_width="700px"
        android:layout_height="300px"
        android:layout_marginBottom="100pt"
        android:background="#ffffff"
        android:src="@drawable/google"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <EditText
        android:layout_width="800px"
        android:layout_height="wrap_content"
        android:id="@+id/searchGoogle"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
     <Button
         android:layout_width="800px"
         android:layout_height="150px"
         android:layout_marginTop="100pt"
         android:text="Zkusím štěstí džůdžl"
         android:onClick="GoogleWordSearch"

         app:layout_constraintBottom_toBottomOf="parent"
         app:layout_constraintLeft_toLeftOf="parent"
         app:layout_constraintRight_toRightOf="parent"
         app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:layout_width="600px"
        android:layout_height="150px"
        android:layout_marginTop="200pt"
        android:text="PRYYYČ!"
        android:onClick="fuckGoBack"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>